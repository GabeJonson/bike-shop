mixin img(file_name)
	img(src=imgPath + file_name, alt="")&attributes(attributes)

mixin figure(file_name)
	figure.image-container&attributes(attributes)
		+img(file_name)

mixin list-link(href, text, linkClass)
	li&attributes(attributes)
		if linkClass
			a(href=href, class=linkClass)= text
		else 
			a(href=href)= text

mixin carousel(img, text)
	.item
		a(href='/bike-shop/build/')
			+img(img)(class='responsive-image')
			if text
				.text-container
					.h2.text-uppercase= text
					p.text-uppercase BUY & ENJOY YOUR CYCLING EXPERIENCE!

mixin items(image, heading, text)
	.items-container.clearfix
		a.text-center.relative(href='#')
			.image-container(style=`background-image: url(${imgPath}${image})`)
			.h5.text-uppercase= heading
			p= text

mixin products(image, amount, oldAmount, name, desc, sale)
	li.product-item.relative.col-xs-12.col-sm-6.col-md-4
		a.product(href='/bike-shop/build/single-product.html')
			if sale
				.sale
					+img('onsale_img.png')
			.thumb-wrap.relative
				+img(image)(class='responsive-image')
				span.quick-view.text-uppercase Quick view
			.content-container
				.price-wrap.text-center.clearfix
					if sale
						.new-price.col-sm-6.non-padding
							span.amount #[=amount] -
							span.amount  #[=amount]
						.old-price.col-sm-6.non-padding
							span.amount #[=oldAmount] -
							span.amount  #[=oldAmount]
					else
						.new-price.text-center.col-sm-12
							span.amount #[=amount] -
							span.amount  #[=amount]
				.describe-wrap.text-center
					.h3.col-sm-12= name
					.short-desc= desc
					.add-product
						.icon-block.relative
							span.text-uppercase Add to card
							i.fa.fa-shopping-cart
						.icon-block.relative
							span.text-uppercase Compare
							i.fa.fa-bar-chart

