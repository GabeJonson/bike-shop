mixin latestPosts(position, image, heading, desc)
	if position == 'left'
		.post-container.clearfix
			.image-container.col-xs-12.col-md-6.relative.non-padding
				a(href='/bike-shop/build/single.html')
					+img(image)(class="responsive-image")
					.date.text-center
						.date-item.text-uppercase
							span 27
							| may
			.description-container.col-xs-12.col-md-6
				.h3.text-uppercase= heading
				p= desc
				a(href='#')
					i.fa.fa-comments-o
					span 3 Comments
	else
		.post-container.clearfix
			.description-container.col-xs-12.col-md-6
				.h3.text-uppercase= heading
				p= desc
				a(href='/bike-shop/build/single.html')
					i.fa.fa-comments-o
					span 3 Comments
			.image-container.col-xs-12.col-md-6.relative.non-padding
				a(href='#')
					+img(image)(class="responsive-image")
					.date.text-center
						.date-item.text-uppercase
							span 27
							| may

mixin stuff(items)
	each item in items
		a(href='/bike-shop/build/single-product.html')
			+img(item.img)
			.text-container
				.h5= item.name
				p.price= item.price

mixin posts(heading, image, text, btn)
	.col-xs-12.col-sm-12
		a(href='/bike-shop/build/single.html')
			strong.h2.text-uppercase= heading
			.blog-post
				+img(image)(class='responsive-image')
				p= text
				if bnt
					button.btn.text-uppercase(href='#') read more