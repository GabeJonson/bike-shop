include ../utils/_mixins

header.container
    .row
        #logo.col-xs-12.col-sm-9
            a(href='/')
                +img('logo.png')
        .col-xs-12.col-sm-3
            form
                .form-group.material
                    label Search
                    input#search(type="text")
                    i.fa.fa-search
        .col-xs-12.col-sm-12.navbar.navbar-default
            ul.main-nav.nav.navbar-nav
                li
                    a.text-uppercase(href="") home
                li
                    a.text-uppercase(href="/about.html") about
                li
                    a.text-uppercase(href="/shop.html") shop
                li
                    a.text-uppercase(href="/blog.html") blog
                li
                    a.text-uppercase(href="/contacts.html") contacts

            ul.nav.navbar-nav.navbar-right
                li
                    a(href="#")
                        i.fa.fa-user
                li.is-empty.relative
                    a(href="#")
                        span.text-center 1
                        i.fa.fa-shopping-cart
